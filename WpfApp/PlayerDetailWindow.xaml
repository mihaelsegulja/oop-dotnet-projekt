<Window x:Class="WpfApp.PlayerDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Player Details" 
        Height="350" Width="300"
        Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="20">
            <Image x:Name="imgPlayer" Width="100" Height="100" Stretch="Fill" Source="Images/default-player.png" Margin="0,0,0,10"/>
            <TextBlock x:Name="tbPlayerName" FontSize="18" FontWeight="Bold" Margin="0,5,0,10"/>
            <TextBlock x:Name="tbShirtNum" FontSize="15" Margin="0,0,0,10"/>
            <TextBlock x:Name="tbPosition" Margin="0,0,0,5"/>
            <TextBlock x:Name="tbIsCaptain" Margin="0,0,0,5"/>
        </StackPanel>
    </Grid>
</Window>
